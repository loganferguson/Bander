@model Bandter.ViewModels.EventViewModel
@{
    ViewData["Title"] = "Events";
}


<div class="row pt-1">
    <div class="col offset-2">
        <h3>@Html.DisplayFor(c => c.CityName)</h3>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-md-8 offset-2">       
        @foreach(var e in Model.EventsList)
        {
            <div class="card" style="padding: 5px; margin:5px;">
                <div class="card-body">
                    <div class="card-header">

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="my-auto">@e.EventDate.Date.ToShortDateString()</h5>
                            <p class="float-right my-auto">Going: @e.Going</p>
                        </div>

                        
                    </div>
                    
                    <div class="card-body">
                        <form class="form-inline">
                            <h4>Title: </h4>
                            <h4>@e.Title</h4>
                        </form>
                                    
                        <h6>Description:</h6>
                        <p class="card-text">@e.Description</p>
                        <form method="post" asp-action="RSVP" asp-controller="Event">
                            <input type="hidden" name="eventId" value="@e.LocationId" />
                            <input class="btn btn-success float-right" type="submit" value="RSVP" />
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>